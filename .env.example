# Database Configuration (Vercel Postgres or Neon)
POSTGRES_URL="postgres://username:password@host:5432/database"
POSTGRES_PRISMA_URL="postgres://username:password@host:5432/database?pgbouncer=true"
POSTGRES_URL_NON_POOLING="postgres://username:password@host:5432/database"

# JWT Secret (REQUIRED - Must be 32+ characters)
# Generate with: npm run generate-secret
JWT_SECRET=""

# Email Configuration (Phase F - for verification and password reset)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@yourdomain.com"
SMTP_SECURE="false"

# Application URL (for email links)
APP_URL="http://localhost:3000"

# Node Environment
NODE_ENV="development"

# Appwrite Configuration (Phase D - Realtime & Functions)
NEXT_PUBLIC_USE_APPWRITE_SERVICES="false"
NEXT_PUBLIC_APPWRITE_ENDPOINT="https://cloud.appwrite.io/v1"
NEXT_PUBLIC_APPWRITE_PROJECT=""
NEXT_PUBLIC_APPWRITE_DATABASE=""
NEXT_PUBLIC_APPWRITE_FUNCTION_SUBMIT_SCORE=""
NEXT_PUBLIC_APPWRITE_FUNCTION_GENERATE_RECAP=""

# Appwrite Storage Buckets (Phase E - Assets)
NEXT_PUBLIC_APPWRITE_BUCKET_LOGOS="logos"
NEXT_PUBLIC_APPWRITE_BUCKET_AVATARS="avatars"

# Appwrite Functions (Phase F - Admin & Audit)
