{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm ci",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "NEXT_PUBLIC_APP_URL": "@app-url",
    "NEXT_PUBLIC_APPWRITE_ENDPOINT": "@appwrite-endpoint",
    "NEXT_PUBLIC_APPWRITE_PROJECT_ID": "@appwrite-project-id",
    "NEXT_PUBLIC_APPWRITE_DATABASE_ID": "@appwrite-database-id",
    "NEXT_PUBLIC_APPWRITE_BUCKET_LOGOS": "@appwrite-bucket-logos",
    "NEXT_PUBLIC_APPWRITE_BUCKET_AVATARS": "@appwrite-bucket-avatars",
    "NEXT_PUBLIC_APPWRITE_FUNCTION_SUBMIT_SCORE": "@appwrite-function-submit-score",
    "NEXT_PUBLIC_APPWRITE_FUNCTION_GENERATE_RECAP": "@appwrite-function-generate-recap",
    "NEXT_PUBLIC_APPWRITE_FUNCTION_LOG_AUDIT": "@appwrite-function-log-audit"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/update-event-statuses",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/cleanup",
      "schedule": "0 2 * * *"
    }
  ]
}
